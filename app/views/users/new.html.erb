<h1>Sign up</h1>

<%= form_for(@user) do |f| %>
  <%= render 'shared/error_messages'%>
  <ol>
    <li class="field">
      <%= f.label :name %>
      <%= f.text_field :name %>
    </li>
    <li class="field">
      <%= f.label :email %>
      <%= f.text_field :email %>
    </li>
    <li class="field">
      <%= f.label :password %>
      <%= f.password_field :password %>
    </li>
    <li class="field">
      <%= f.label :password_confirmation %>
      <%= f.password_field :password_confirmation %>
    </li>
    <li class="actions">
      <%= f.submit "Sign Up" %>
    </li>
  </ol>
<% end %>